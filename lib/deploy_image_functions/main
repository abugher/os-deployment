#!/bin/bash


function main() {
  get_root
  keep_root &
  keep_root_pid=$!
  get_pass "aaron/${host}/root"
  keep_pass "aaron/${host}/root" &
  keep_pass_pid=$!

  unmount_prep
  safety_net "${card_device}"

  write_image
  fix_gpt
  create_big_partition

  mount_root
  sync_big_partition 
  mount_nonroot

  configure_os

  unmount_nonroot
  unmount_root

  kill_loop "${keep_root_pid}"
  kill_loop "${keep_pass_pid}"
}
